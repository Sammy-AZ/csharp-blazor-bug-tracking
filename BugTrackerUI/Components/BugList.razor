<h3>All Bugs</h3>
<table>
    @foreach (var bug in Bugs)
    {
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Priority</th>
            </tr>
        </thead>
        <tr>
            <td>@bug.Id</td>
            <td>@bug.Title</td>
            <td>@bug.Description</td>
            <td>@bug.Priority</td>
        </tr>
    }
</table>
@code {
    [Inject]
    public IBugService BugService { get; set; }

    public IOrderedEnumerable<Bug> Bugs { get; set; }

    #region Overrides of ComponentBase

    /// <inheritdoc />
    protected override void OnInitialized()
    {
        Bugs = BugService.GetBugs().OrderBy(x => x.Priority);
    }

    #endregion

}
